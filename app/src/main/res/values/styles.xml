<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="btnStyle">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@drawable/text_color_change</item>
        <item name="android:padding">@dimen/title_padding</item>
        <item name="android:background">@drawable/button_change</item>
        <item name="android:layout_marginLeft">@dimen/button_margin_left_and_right</item>
        <item name="android:layout_marginRight">@dimen/button_margin_left_and_right</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_bottom</item>
    </style>
    <style name="tabStyle">
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">11dp</item>
        <item name="android:textColor">@drawable/menu_tab_name_selector</item>
    </style>

<!--新闻标题字体样式-->
    <style name="newsTitleStyle">
        <item name="android:textSize">@dimen/home_news_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
